<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/DarkBlue"
    app:layout_collapseParallaxMultiplier="1.0"
    tools:context="engineering.software.gsu.majoradvisement.LoginActivity">

    <EditText
        android:id="@+id/password_input"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/login_button"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="34dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textColorHint="@color/colorAccent" />
    //editing text design

    <Button
        android:id="@+id/login_button"
        android:layout_width="270dp"
        android:layout_height="70dp"
        android:layout_above="@+id/register_button"
        android:layout_alignStart="@+id/username_input"
        android:layout_marginBottom="28dp"
        android:layout_weight="4"
        android:backgroundTint="@color/colorAccent"
        android:text="Login"
        android:textColor="@android:color/white"
        android:textSize="18sp" />
    //register Design edit

    <Button
        android:id="@+id/register_button"
        android:layout_width="270dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/login_button"
        android:layout_marginBottom="66dp"
        android:layout_weight="4"
        android:backgroundTint="@color/colorAccent"
        android:text="Register"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/username_input"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/password_input"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="28dp"
        android:hint="Username"
        android:singleLine="true"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textColorHint="@color/colorAccent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_action_name"
        android:layout_alignBottom="@+id/username_input"
        android:layout_alignStart="@+id/username_input"
        android:layout_alignTop="@+id/username_input" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/lock_pink_theme"
        android:layout_below="@+id/username_input"
        android:layout_alignStart="@+id/password_input"
        android:layout_alignBottom="@+id/password_input" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/about_icon" />
</RelativeLayout>
