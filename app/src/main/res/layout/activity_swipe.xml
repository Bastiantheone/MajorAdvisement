<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="engineering.software.gsu.majoradvisement.SwipeActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/text_left"
            android:gravity="start"
            android:text="Software"
            android:textSize="15dp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/text_center"
            android:gravity="center"
            android:layout_weight="1"
            android:text="Swipe to the corresponding side"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/text_right"
            android:gravity="end"
            android:layout_weight="1"
            android:text="Hardware"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/software_image"
            android:src="@raw/code_image"
            android:layout_width="200dp"
            android:layout_height="200dp"/>

        <ImageView
            android:layout_gravity="center"
            android:id="@+id/hardware_image"
            android:src="@raw/hardware_image"
            android:layout_width="200dp"
            android:layout_height="200dp" />

</LinearLayout>
