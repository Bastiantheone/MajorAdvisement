<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="engineering.software.gsu.majoradvisement.SwipeActivity">
    <TextView
        android:id="@+id/text_center"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_weight="1"
        android:text="@string/swipe_instruction"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="0dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/text_left"
            android:gravity="start"
            android:textSize="15sp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/text_right"
            android:gravity="end"
            android:layout_weight="1"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
        <ImageView
            android:contentDescription="@string/upper_img"
            android:layout_gravity="center"
            android:id="@+id/upper_image"
            android:layout_width="150dp"
            android:layout_height="150dp"/>

        <ImageView
            android:contentDescription="@string/lower_img"
            android:layout_gravity="center"
            android:id="@+id/lower_image"
            android:layout_width="150dp"
            android:layout_height="150dp" />
        <Button
            android:text="@string/next"
            android:id="@+id/next_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

</LinearLayout>
